rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/credentials/{providerId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /organisations/{organisationId} {
      allow read: if request.auth.uid in resource.data.owners || request.auth.uid in resource.data.admins || request.auth.uid in resource.data.members;
      allow write: if request.auth.uid in request.resource.data.owners;
    }
  }
}
