rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	match /{document=**} {
      allow read, write: if false;
    }
    
    ///////////////////////////////////////////
    // the_process
    ///////////////////////////////////////////
    
    match /projects/{project}/profiles/{userId} {
      allow read, write: if project == 'the-process' && request.auth.uid == userId;
    }

    match /projects/{project}/new/{userId} {
      allow read, write: if project == 'the-process' && request.auth.uid == userId;
    }

    match /projects/{project}/sections/{sectionId} {
      allow read: if project == 'the-process' && request.auth.uid != null;
      allow write: if false;
    }

    match /projects/{project}/organisations/{organisationId} {
      allow read: if project == 'the-process';
      allow create: if project == 'the-process' && request.auth.uid in request.resource.data.ownerIds;
      allow delete: if project == 'the-process' && request.auth.uid in resource.data.ownerIds;      
    }

    match /projects/{project}/projects/{projectId} {
      allow read: if project == 'the-process';
      allow create: if project == 'the-process' && request.auth.uid in request.resource.data.ownerIds;
      allow delete: if project == 'the-process' && request.auth.uid in resource.data.ownerIds;      
    }
    
    ///////////////////////////////////////////
    // adventure-maker
    ///////////////////////////////////////////

  	// adventures
  	match /projects/{project}/adventures/{docId} {
      allow read, write: if project == 'adventure-maker' && request.auth.uid != null;
    }

    // challenges
    match /projects/{project}/challenges/{docId} {
      allow read, write: if project == 'adventure-maker' && request.auth.uid != null;
    }

    // tasks
    match /projects/{project}/tasks/{docId} {
      allow read, write: if project == 'adventure-maker' && request.auth.uid != null;
    }

    // steps
    match /projects/{project}/steps/{docId} {
      allow read, write: if project == 'adventure-maker' && request.auth.uid != null;
    }
    
    ///////////////////////////////////////////
    // ?
    ///////////////////////////////////////////

    // match /emails/{docId} {
    //   allow read, write: if true;
    // }
    
    // match /email-errors/{docId} {
    //   allow read, write: if true;
    // }
    
  }
}