rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	match /{document=**} {
      allow read, write: if false;
    }
    
    ///////////////////////////////////////////
    // the_process
    ///////////////////////////////////////////
    
    match /profiles/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /new/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /sections/{sectionId} {
      allow read: if request.auth.uid != null;
      allow write: if false;
    }

    match /organisations/{organisationId} {
      allow read: if true;
      allow create: if request.auth.uid in request.resource.data.ownerIds;
      allow delete: if request.auth.uid in resource.data.ownerIds;      
    }

    match /projects/{projectId} {
      allow read: if true;
      allow create: if request.auth.uid in request.resource.data.ownerIds;
      allow delete: if request.auth.uid in resource.data.ownerIds;      
    }
    
    ///////////////////////////////////////////
    // ?
    ///////////////////////////////////////////

  	// adventures
  	match /adventures/{docId} {
      allow read, write: if true;
    }
    
    match /emails/{docId} {
      allow read, write: if true;
    }
    
    match /email-errors/{docId} {
      allow read, write: if true;
    }
    
  }
}