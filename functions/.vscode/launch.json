  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha All",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--no-timeouts",
        "${workspaceFolder}/test/**"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
  },
  {
      "name": "Mocha Current File",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--no-timeouts",
        "${workspaceFolder}/**/${fileBasenameNoExtension}.ts"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
  }
  ]
}